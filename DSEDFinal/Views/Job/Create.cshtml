@model DSEDFinal.ViewModels.JobFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>New Job</h2>
@using (Html.BeginForm("Create", "Job"))
{
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken();
    <div class="form-group">
        @Html.HiddenFor(m => m.OrganizationId)
        @Html.LabelFor(m => m.Reference)
        @Html.TextBoxFor(m => m.Reference, new {@class = "form-control", autofocus = "autofocus"})
        @Html.ValidationMessageFor(m => m.Reference)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}